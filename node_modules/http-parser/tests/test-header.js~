var HttpHeader = require('../http-header').HttpHeader;

// var __toks = {};
// __toks[SP] = "SP";
// __toks[CR] = "CR";
// __toks[LF] = "LF";
// var getToken = function(charCode) {
//   var res = __toks[charCode];
//   return res == null ? String.fromCharCode(charCode) : res;
